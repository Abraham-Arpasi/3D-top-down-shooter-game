using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class PlayerAnimationEvents : MonoBehaviour
{
    private WeaponVisualController visualController;

    private void Start()
    {
        visualController = GetComponentInParent<WeaponVisualController>();  
    }

    //This will Return the rig weight for the other script when animation is over.
    public void ReloadIsOver()
    {
        visualController.ReturnRigWeightToOne();

    }

    //this will return the rif weight for the other script when the animation is over.
    public void WeaponGrabIsOver()
    {
        visualController.ReturnRigWeightToOne();
        visualController.ReturnWeightToLeftHandIK();
    }
}
